#include <stdio.h>
#include <stdlib.h>
#include <unistd.h> 
#include <stdint.h>

#define _DEFAULT_SOURCE
#define BUF_SIZE 256

struct header {
  uint64_t size;
  struct header *next;
};

void handle_error(const char *msg)
{
  perror(msg);
  exit(EXIT_FAILURE);
}

void *increase_heap_size(size_t size) {
  void *heap_start = sbrk(size);
  if (heap_start == (void *)-1) {
    handle_error("sbrk");
  }
  return heap_start;}



